@model IList<Person>
@{
    ViewData["Title"] = "Home Page";
    var firstEmployee = Model.FirstOrDefault();
}

@if (firstEmployee is not null)
{
    <div class="text-center mb-3">
        <h1 class="display-4">Employee of the Month!</h1>
        <partial name="PersonCardPartial" model="firstEmployee"/>
    </div>
}

<h2>Employees</h2>
<div class="row">
    @foreach (var person in Model)
    {
        <div class="col-4 mb-3">
            <partial name="PersonCardPartial" model="person"/>
        </div>
    }
</div>
